<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.micol.prj.board.service.BoardMapper">
 <select id="boardSelectList" resultType="co.micol.prj.board.service.BoardVO">
      select * from board
   </select>
 <select id="boardSelect" 
 parameterType = "co.micol.prj.board.service.BoardVO"
 resultType="co.micol.prj.board.service.BoardVO">
   
      select * from board where bid = #{bId}
   </select>


 <insert id="boardInsert" parameterType="co.micol.prj.board.service.BoardVO">
      insert into board
      values(b_squ.nextval, #{bWriter}, sysdate, #{bTitle}, #{bContents}, 0)
   </insert>

 <update id="boardUpdate" parameterType="co.micol.prj.board.service.BoardVO">
      update board set bcontents = #{bContents}
      where bid = #{bId} 
   </update>
   
   <update id="boardHitUpdate">
   			update board set bhit = bhit + 1 where id = #{id}
   </update>

<delete id="boardDelete" parameterType="co.micol.prj.board.service.BoardVO">
      delete from board where bid = #{bId}

</delete>

</mapper>